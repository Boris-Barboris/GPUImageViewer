<Window x:Class="GPUImageViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPUImageViewer"
        mc:Ignorable="d"
        Title="GPUImageViewer" Height="600" Width="800"
        Drop="Window_Drop" AllowDrop="True"
        MouseWheel="image_MouseWheel" MouseMove="image_MouseMove" 
        MouseLeftButtonDown="image_MouseLeftButtonDown" MouseLeftButtonUp="image_MouseLeftButtonUp" KeyDown="Window_KeyDown">
    <Grid x:Name="grid" Background="Black">
        <Image x:Name="image" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
